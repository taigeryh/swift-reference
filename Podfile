# Uncomment the next line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'

target 'swift-reference' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for swift-reference
  # 网络请求
  # https://github.com/Alamofire/Alamofire
  pod 'Alamofire', '~> 4.7'
  
  # json解析
  # https://github.com/Hearst-DD/ObjectMapper
  pod 'ObjectMapper', '~> 3.2.0'

  # webImage
  # https://github.com/onevcat/Kingfisher
  pod 'Kingfisher', '~> 4.0'
  
  # a DSL to make Auto Layout easy
  # https://github.com/SnapKit/SnapKit
  pod 'SnapKit', '~> 4.0.0'

  # 日志记录
  # https://github.com/CocoaLumberjack/CocoaLumberjack
  pod 'CocoaLumberjack/Swift'
  
  # 为移动开发者提供专业的异常上报和运营统计，帮助开发者快速发现并解决异常，同时掌握产品运营动态，及时跟进用户反馈 OC写的
  # https://bugly.qq.com/docs/user-guide/instruction-manual-ios/?v=20180705214002
  pod 'Bugly'
  
  # 响应式编程
  # https://github.com/ReactiveX/RxSwift
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'

  target 'swift-referenceTests' do
    inherit! :search_paths
    # Pods for testing
    
    # rx
    pod 'RxBlocking', '~> 4.0'
    pod 'RxTest',     '~> 4.0'
    
  end

  target 'swift-referenceUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
